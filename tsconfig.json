{
  "compilerOptions": {
    "outDir": ".",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["dom", "es6"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "checklist.ts",
    "index.ts",
    "typings/index.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "temp/factories",
		"strictMetadataEmit": true
  },
	"atom": { "rewriteTsconfig": false }
}
